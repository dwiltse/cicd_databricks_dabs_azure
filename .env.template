# Azure Databricks Asset Bundle Configuration Template
# Copy this file to .env and update with your specific values
# DO NOT commit .env to git - it contains sensitive information

# ========================================
# Azure Databricks Workspace Configuration
# ========================================
# Replace with your Azure Databricks workspace URL
DATABRICKS_HOST=https://your-azure-workspace.azuredatabricks.net

# Replace with your Personal Access Token
# Generate in: Databricks UI > Settings > Developer > Access Tokens
DATABRICKS_TOKEN=your-personal-access-token-here

# ========================================
# Azure Storage External Connections
# ========================================
# These should match the external connection names you create in Databricks UI
# Data > External Connections

# Development environment external connection
AZURE_EXTERNAL_LOCATION_DEV=azure_blob_customer_data

# Staging environment external connection (optional)
AZURE_EXTERNAL_LOCATION_STAGING=azure_blob_customer_data_staging

# Production environment external connection
AZURE_EXTERNAL_LOCATION_PROD=azure_blob_customer_data_prod

# ========================================
# Email Notification Configuration
# ========================================
# Email address to receive pipeline success/failure notifications
NOTIFICATION_EMAIL=your-email@company.com

# ========================================
# Unity Catalog Configuration
# ========================================
# Catalog names for different environments
DEV_CATALOG=insurance_demo_dev
STAGING_CATALOG=insurance_demo_staging
PROD_CATALOG=insurance_demo_prod

# Schema name (usually consistent across environments)
SCHEMA_NAME=customers

# ========================================
# Azure Storage Account Details (for reference)
# ========================================
# These are used when setting up external connections in Databricks UI
# DO NOT use these directly in pipeline code - use external connections instead

# Azure Storage Account Name
AZURE_STORAGE_ACCOUNT=yourstorageaccountname

# Azure Container Names
AZURE_CONTAINER_DEV=customer-data-dev
AZURE_CONTAINER_STAGING=customer-data-staging
AZURE_CONTAINER_PROD=customer-data-prod

# ========================================
# Pipeline Configuration
# ========================================
# Path within Azure Blob Storage container where customer JSON files are stored
CUSTOMER_DATA_PATH=customers/

# ========================================
# Optional: Service Principal Authentication
# ========================================
# If using service principal instead of personal access token:
# AZURE_CLIENT_ID=your-service-principal-client-id
# AZURE_CLIENT_SECRET=your-service-principal-secret
# AZURE_TENANT_ID=your-azure-tenant-id